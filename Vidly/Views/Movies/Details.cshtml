@using Vidly.Models
@model Vidly.Models.Movies

@{
    ViewBag.Title = "Default";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Genre: @Model.Genre.Name</li>
    <li>Release Date: @Model.ReleaseDate.ToString("dddd, MMMM dd, yyyy")</li>
    <li>Added: @Model.DateAdded.ToLongDateString()</li>
    <li>Stock: @Model.NumberInStock</li>
</ul> 