@using System.Web.UI.WebControls
@model IEnumerable<Vidly.Models.Movies>

@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-sm-6"><h2>@ViewBag.Title</h2></div>
    <div class="col-sm-6"><br />@Html.ActionLink("Add New", "new", "movies", new {}, new { @class = "btn btn-primary btn-xs pull-right" })</div>
</div>

@if (!Model.Any())
{
    <p>We don't have any movies yet.</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Movies</th>
                <th>Genre</th>
                <th class="text-right">Edit</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@Html.ActionLink(movie.Name, "details", "movies", new { id = movie.Id }, null)</td>
                    <td>@movie.Genre.Name</td>
                    <td>@Html.ActionLink("Edit", "edit", "movies", new { id = movie.Id }, new { @class = "btn btn-primary btn-xs pull-right" })</td>
                </tr>
            }
        </tbody>
    </table>
}
